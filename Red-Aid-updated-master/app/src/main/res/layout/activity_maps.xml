<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffccbc">
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="385dp"
    android:layout_height="match_parent"
    tools:context="com.example.charul.webservicedemo.MapsActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" YES!   Proceed "
        android:id="@+id/proceed"
        android:layout_gravity="center_horizontal|bottom|left"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No! I am not there "
        android:id="@+id/nope"
        android:layout_gravity="center_horizontal|bottom|right"/>

    <Button
        android:text="Find Nearest Hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6" />


</FrameLayout>